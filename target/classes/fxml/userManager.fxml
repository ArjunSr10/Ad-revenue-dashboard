<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<TilePane fx:id="tilePane" alignment="CENTER" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="main.dash.scene.controller.UserManagerController"
          prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10">
        <Text text="Manage Users" fx:id="userManagerText"/>
        <Text text="Enter user's username"/>
        <HBox>
            <TextField promptText="Username" fx:id="usernameText"/>
            <Button text="Select user" fx:id="selectUserButton"/>
            <Text fx:id="userRoleText"
                  style="
        -fx-font-weight: bold;
        -fx-font-size: 10px;
        -fx-translate-x: 10px;
      "/>

        </HBox>
        <HBox>
            <Button text="Remove user" fx:id="removeUserButton" visible="false"/>
            <MenuButton text="Change role" fx:id="chooseRoleButton" visible="false">
                <items>
                    <MenuItem text="Admin" fx:id="adminButton"/>
                    <MenuItem text="Editor" fx:id="editorButton"/>
                    <MenuItem text="Viewer" fx:id="viewerButton"/>
                </items>
            </MenuButton>
        </HBox>
        <Button text="Return" fx:id="returnButton"/>
    </VBox>
</TilePane>
